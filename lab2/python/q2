n = int(input("Please enter a number between 3 and 9: "))

if n < 3 or n > 9:
    print("Invalid input!")
else:

    for i in range(1, n * 2):

        if i <= n:
            num_stars = i
        else:
            num_stars = n * 2 - i

        for j in range(num_stars):
            print('*', end='')
        print()
